%h3 Standard Progress bar
.progress
  .progress__bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "60", :role => "progressbar", :style => "width: 60%;"}
    %span.sr-only 60% Complete

%h3 Progress bar stacked
.progress
  .progress__bar{:style => "width: 20%"}
    %span.sr-only Step 1
  .progress__bar{:style => "width: 20%"}
    %span.sr-only Step 2
  .progress__bar{:style => "width: 20%"}
    %span.sr-only Step 3
  .progress__bar{:style => "width: 20%"}
    %span.sr-only Step 4

%h3 Progress bar money earned
.margin-bottom--computed.clearfix
  .progress.margin-bottom--5
    .progress__bar{:style => "width: 10%"}
      %span.sr-only $10 earned
    .progress__bar{:style => "width: 10%"}
      %span.sr-only $20 earned
    .progress__bar{:style => "width: 10%"}
      %span.sr-only $30 earned
    .progress__bar{:style => "width: 10%"}
      %span.sr-only $40 earned

  %strong.pull-left
    $0
  %strong.pull-right
    $100

%h3 Progress bar with right label
.row
  .col-md-8
    .progress
      .progress__bar{"aria-valuemax" => "100", "aria-valuemin" => "0", "aria-valuenow" => "60", :role => "progressbar", :style => "width: 60%;"}
  .col-md-4
    %strong 60% Complete