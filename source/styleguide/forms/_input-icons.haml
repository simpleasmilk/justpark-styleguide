%table.table
  %thead
    %tr
      %th{colspan: '3'}
        %h3 Input icons
  %tbody
    %tr
      %td
        .input-with-icon
          %input.form-control{placeholder: "I'm an input", type: "text"}
          .input-icon
            %span.icon.icon--settings
      %td Input with icon
      %td .input-with-icon

    %tr
      %td
        .input-with-icon
          %input.form-control.form-control--success{placeholder: "I'm an input", type: "text"}
          .input-icon
            %span.icon.icon--settings
      %td Success input with icon
      %td .input-with-icon

    %tr
      %td
        .input-with-icon
          %input.form-control.form-control--error{placeholder: "I'm an input", type: "text"}
          .input-icon
            %span.icon.icon--settings
      %td Error input with icon
      %td .input-with-icon

    %tr
      %td
        .input-with-icon
          %input.form-control{placeholder: "I'm an input", type: "text", disabled: "disabled"}
          .input-icon
            %span.icon.icon--settings
      %td Error input with icon
      %td .input-with-icon