%table.table
  %thead
    %tr
      %th{colspan: '3'}
        %h3 Checkboxes & Radios
  %tbody
    %tr
      %td
        .checkbox
          %input#check1{:name => "check", :type => "checkbox", :value => "check1"}/
          %label{:for => "check1"} Checkbox No. 1
      %td Input
      %td .form-control

    %tr
      %td
        .checkbox
          %input{:disabled => "disabled", :type => "checkbox", :value => ""} 
          %label Checkbox
      %td Input
      %td .form-control

    %tr
      %td
        .radio
          %input#male{:name => "gender", :type => "radio", :value => "male"}/
          %label{:for => "male"} Male
        .radio
          %input#female{:name => "gender", :type => "radio", :value => "female"}/
          %label{:for => "female"} Female
      %td Input
      %td .form-control

    %tr
      %td
        .radio.disabled
          %input{:disabled => "disabled", :type => "radio" }
          %label{:for => ""} Disabled


