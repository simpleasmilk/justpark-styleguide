  .col-md-4
    %h3 Time and Date input
    .bootstrap-datetimepicker-widget.bootstrap-datetimepicker-widget--time.picker-open.sg-show
      %ul.list-unstyled
        %li
          .timepicker
            .timepicker-picker.clearfix
              .timepicker__date 9th December 2014 
              
              .timepicker__hour.clearfix
                %a{"data-action" => "incrementHours", :href => "#"}
                  %span.icon.icon--navigateup

                %input.form-control{type: "text", "data-time-component" => "hours", value: "9"}

                %a{"data-action" => "decrementHours", :href => "#"}
                  %span.icon.icon--navigatedown
                    
              .timepicker__minute  
                %a{"data-action" => "incrementMinutes", :href => "#"}
                  %span.icon.icon--navigateup
                
                %input.form-control{type: "text", "data-time-component" => "minutes", value: "30"}


                %a{"data-action" => "decrementMinutes", :href => "#"}
                  %span.icon.icon--navigatedown
              
              .timepicker__ampm.clearfix
                %button.btn.btn--full{"data-action" => "togglePeriod", :type => "button"} AM

            %a.btn.btn--primary.btn--full{:href => "#"} Done
              
              
              
              
            
